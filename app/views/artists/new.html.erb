<h1>New Artist</h1>

<% if flash[:errors] %>
	<ul>
		<% flash[:errors].each do |error| %>
			<li style="color:red;"><%= error %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @artist do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :age %><br>
	<%= f.text_field :age %><br>

	<%= f.label :title %><br>
	<%= f.text_field :title %><br>

	<%= f.submit %>
<% end %>